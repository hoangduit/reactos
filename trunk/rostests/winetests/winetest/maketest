#!/bin/sh

TOPSRCDIR="$1"
shift

echo "/* Automatically generated -- do not edit! */"
echo "STRINGTABLE {"

i=0
cd $TOPSRCDIR
if [ -d .git ]
then
    git-ls-files -c -s --abbrev=10 -- "dlls/*/tests/*.c" |\
        sed -ne "s|^[0-7]* \([0-9a-f]*\) [0-9]	\(.*\)$|\2:\1|p"
else
    for dir in dlls/*/tests; do
        sed -ne "s|^/\([^.]*.c\)/\([^/]*\).*|$dir/\1:\2|p" $dir/CVS/Entries 2>/dev/null
    done
fi |\
while read line; do
    echo "REV_INFO+$i \"$line\""
    i=`expr $i + 1`
done

echo "}"
